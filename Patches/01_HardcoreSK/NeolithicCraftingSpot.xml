      <xpath>Defs/RecipeDef[defName="ZF_MakeMacuahuitl"]/recipeUsers</xpath>
      <value>
        <li>ZF_NeolithicCraftingSpot</li>
      </value>
    </match>
  </Operation>

  <Operation Class="PatchOperationFindMod">
