<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  
        <ThingDef ParentName="SK_StoneBlocksBase">
                <defName>ZF_BlocksFlint</defName>
                <label>flint blocks</label>
                <description>Blocks of solid flint, a hard and beautiful stone. Blocks of flint are hard to make since the rock is very brittle. Strong aginst blunt damage, but susceptible to sharp damage.</description>
                <graphicData>
                        <color>(100, 100, 100)</color>
                </graphicData>
                <statBases>
                        <MarketValue>8</MarketValue>
                        <Mass>1.5</Mass>
                        <SharpDamageMultiplier>1.2</SharpDamageMultiplier>
                        <BluntDamageMultiplier>0.5</BluntDamageMultiplier>
                </statBases>
                <stuffProps>
                        <color>(100, 100, 100)</color>
                        <soundImpactStuff>BulletImpact_Metal</soundImpactStuff>
                        <soundMeleeHitSharp>MeleeHit_Stone</soundMeleeHitSharp>
                        <soundMeleeHitBlunt>MeleeHit_Stone</soundMeleeHitBlunt>
                        <stuffAdjective>flint</stuffAdjective>
                        <statFactors>
                                <Beauty>4.0</Beauty>  
                                <MarketValue>2.5</MarketValue>
                                <MaxHitPoints>1.2</MaxHitPoints>
                                <WorkToBuild>10</WorkToBuild>
                                <WorkToMake>2</WorkToMake>
                                <Mass>1.5</Mass>
                        </statFactors>
                        <statOffsets>
                                <Beauty>5</Beauty>
                        </statOffsets>
                </stuffProps>
        </ThingDef>


