  <RecipeDef ParentName="ZF_MakeHardStoneBlocksBase_Neolithic">
    <defName>Make_StoneBlocksFlint_Neolithic</defName>
    <label>Make flint blocks</label>
    <description>Cuts flint chunks into usable blocks.</description>
    <workAmount>2500</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ZF_ChunkFlint</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ZF_ChunkFlint</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <ZF_BlocksFlint>12</ZF_BlocksFlint>  
      <ZF_SharpStoneShard>2</ZF_SharpStoneShard>
      <SandResource>30</SandResource>   
    </products>
    <researchPrerequisite>ZF_HardStoneCuttingI</researchPrerequisite>
  </RecipeDef>

